/////////////
// OPTIONS //
/////////////

$postman-error-color = #d03c3c
$postman-info-color = #279ce3
$postman-success-color = #5bbf5b
$postman-warn-color = lighten(#e6d510, 25%)

// at what width do you want it to start using "mobile" styles
$postman-mobile-breakpoint = 540px

// e.g. the height of a fixed toolbar
$postman-parcels-offset = 0

$postman-parcel-border-radius = 6px

$postman-dark-default = #333333
$postman-light-default = whitesmoke
$postman-lightness-threshold = 60%

////////////
// MIXINS //
////////////

// make the text either light or dark depending on background color
postman-color($bgColor, $dark = $postman-dark-default, $light = $postman-light-default, $threshold = $postman-lightness-threshold)
	background-color: $bgColor
	if lightness($bgColor) < $threshold
		/*color: $light*/
		color: lighten($bgColor, 90%)
	else
		/*color: $dark*/
		color: darken($bgColor, 70%)


mobile()
	@media (max-width: $postman-mobile-breakpoint)
		{block}


////////////
// STYLES //
////////////

.postman-parcels
	position: fixed
	top: ($postman-parcels-offset + 10px)
	right: 0
	z-index: 5000
	max-width: 50%
	//tu sie wyswietli blad w idei bo to badziew
	+mobile()
		top auto
		right auto
		bottom 0
		left 0
		width 100%
		max-width 100%

.postman-parcel
	&, *
		-webkit-box-sizing: border-box
		box-sizing: border-box
	margin: 0 10px 10px
	padding: 16px 20px
	position: relative
	z-index: 1001
	background: white
	border-radius: $postman-parcel-border-radius
	min-width: 300px
	max-width: 100%
	text-align: left
	// align right, but only 1 per line
	float: right
	clear: right
	cursor: pointer
	box-shadow: 4px 4px 20px rgba(black, 0.3)

	a
	a:hover
		color inherit

	&:hover
		box-shadow: 4px 4px 20px rgba(black, 0.5)
	mobile()
	.postman-title
		font-size: 18px
		line-height: 22px
		font-weight: bold
	.postman-body
		font-size: 13px
		line-height: 17px
		font-weight: normal
	&.error
		postman-color($postman-error-color)
	&.info
		postman-color($postman-info-color)
	&.success
		postman-color($postman-success-color)
	&.warn
		postman-color($postman-warn-color)
	// these respective easings make a world of difference
	&.ng-enter
		-webkit-transition: all 0.5s ease-out
		transition: all 0.5s ease-out
	&.ng-leave
		-webkit-transition: all 0.5s ease-in
		transition: all 0.5s ease-in
	// pre-enter state
	&.ng-enter
		opacity: 0
		left: -300px
	// final leave state
	&.ng-leave.ng-leave-active
		opacity: 0
		left: 100%
	// final enter state,
	// pre-leave state
	&.ng-enter.ng-enter-active
	&.ng-leave
		opacity: 1
		left: 0